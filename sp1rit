// German TeX X Keymap <sp1ritCS@protonmail.com>
default partial alphanumeric_keys
xkb_symbols "basic" {
	include "de(nodeadkeys)"
	name[Group1]="Sp1rit's German TeX Layout";
	key <AD11> { [backslash, dollar] };
	key <AC10> { [braceleft, parenleft] };
	key <AC11> { [braceright, parenright] };
	// key <CAPS> { [comma] };
	key <AC01> { [a, A, adiaeresis, Adiaeresis] };
	key <AD09> { [o, O, odiaeresis, Odiaeresis] };
	key <AD07> { [u, U, udiaeresis, Udiaeresis] };
};

partial alphanumeric_keys
xkb_symbols "vim" {
	include "sp1rit(basic)"
	name[Group1]="Sp1rit's German TeX Layout with CAPS Vim (comma) leader"
	key <CAPS> { [comma] };
};
